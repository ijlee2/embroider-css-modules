{{#let (unique-id) as |sectionId|}}
  <section
    aria-labelledby={{sectionId}}
    class={{this.styles.section}}
  >
    <h2
      class={{this.styles.title}}
      data-test-section-title
      id={{sectionId}}
    >
      {{yield to="title"}}
    </h2>

    <div data-test-section-content>
      {{yield to="content"}}
    </div>
  </section>
{{/let}}