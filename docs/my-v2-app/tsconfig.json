{
  "extends": "@shared-configs/typescript/ember",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "my-v2-app/tests/*": ["tests/*"],
      "my-v2-app/*": ["app/*"],
      "*": ["types/*"]
    },
    "plugins": [
      {
        "name": "@glint/tsserver-plugin"
      }
    ],
    "types": ["ember-source/types", "@glint/ember-tsc/types"]
  },
  "include": ["app/**/*", "tests/**/*", "types/**/*"]
}
