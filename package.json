{
  "name": "workspace-root",
  "version": "4.0.0",
  "private": true,
  "description": "Workspace root for embroider-css-modules",
  "repository": {
    "type": "git",
    "url": "https://github.com/ijlee2/embroider-css-modules.git"
  },
  "license": "MIT",
  "author": "Isaac J. Lee",
  "type": "module",
  "scripts": {
    "build": "concurrently \"pnpm:build:*\"",
    "build:my-v1-app": "pnpm --filter my-v1-app build",
    "build:my-v2-addon": "pnpm --filter my-v2-addon build",
    "build:packages": "pnpm --filter \"./packages/**\" build",
    "format": "pnpm --filter \"*\" format",
    "lint": "pnpm --filter \"*\" lint && pnpm lint:package-json",
    "lint:fix": "pnpm --filter \"*\" lint:fix && pnpm lint:package-json:fix",
    "lint:package-json": "pnpm lint:package-json:fix --check",
    "lint:package-json:fix": "sort-package-json \"**/package.json\" --ignore \"**/{blueprints,dist,dist-for-testing,node_modules,tests,tmp}/**\"",
    "prepare": "pnpm --filter \"./packages/**\" --filter my-v2-addon build",
    "release:prepare": "changeset version; update-workspace-root-version",
    "release:publish": "pnpm build:packages && changeset publish",
    "start": "concurrently \"pnpm:start:*\" --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:embroider-css-modules": "pnpm --filter embroider-css-modules start",
    "start:my-v1-app": "pnpm --filter my-v1-app start",
    "start:my-v2-addon": "pnpm --filter my-v2-addon start",
    "test": "pnpm --filter \"*\" test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@ijlee2-frontend-configs/changesets": "^2.0.0",
    "concurrently": "^9.2.1",
    "sort-package-json": "^3.6.1",
    "update-workspace-root-version": "^3.0.0"
  },
  "packageManager": "pnpm@10.30.1",
  "engines": {
    "node": "22.* || >= 24",
    "pnpm": ">= 10"
  }
}
