<table data-test-table="Tracks">
  <thead>
    <tr>
      <th class={{this.styles.track-number}}>#</th>
      <th>Title</th>
      <th class={{this.styles.track-length}}>Length</th>
      <th class={{this.styles.track-is-explicit}}>Explicit</th>
    </tr>
  </thead>

  <tbody>
    {{#each @tracks as |track index|}}
      <tr data-test-row>
        <td>
          {{add index 1}}
        </td>
        <td data-test-column="Title">
          {{track.name}}
        </td>
        <td data-test-column="Length" align="right">
          {{track.length}}
        </td>
        <td data-test-column="Explicit" align="center">
          {{if track.isExplicit "Yes"}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>