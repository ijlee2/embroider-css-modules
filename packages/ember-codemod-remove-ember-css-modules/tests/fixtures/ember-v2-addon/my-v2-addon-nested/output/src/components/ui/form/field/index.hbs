<div
  class="{{this.styles.container}} {{local this.styles (if @isInline 'is-inline')}} 
     {{local this.styles (if @isWide 'is-wide')}} 
     {{local this.styles (unless @errorMessage 'no-feedback')}} 
  "
>
  <div class={{this.styles.label}}>
    {{yield (hash inputId=this.inputId) to="label"}}
  </div>

  <div class={{this.styles.field}}>
    {{yield (hash inputId=this.inputId) to="field"}}
  </div>

  {{#if @errorMessage}}
    <div class={{local this.styles "feedback" "is-error"}}>
      {{svg-jar "alert" aria-hidden="true"}}

      <span
        class={{this.styles.message}}
        data-test-feedback
        role="alert"
      >
        {{@errorMessage}}
      </span>
    </div>
  {{/if}}
</div>