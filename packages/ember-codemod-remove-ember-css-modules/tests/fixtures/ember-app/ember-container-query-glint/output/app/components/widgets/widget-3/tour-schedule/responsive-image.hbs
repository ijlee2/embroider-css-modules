<div
  class={{this.styles.image-container}}
  {{container-query debounce=300 onQuery=this.setImageSource}}
>
  {{#if this.imageSource}}
    <img
      alt=""
      data-test-image="Concert"
      class={{this.styles.image}}
      role="presentation"
      src={{this.imageSource}}
    />
  {{/if}}
</div>