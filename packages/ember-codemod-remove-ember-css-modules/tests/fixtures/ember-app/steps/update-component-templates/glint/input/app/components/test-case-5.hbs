<div data-test-container>
  <div class=" b1 ">
    {{! Some content }}
  </div>

  <div local-class=" a1 ">
    {{! Some content }}
  </div>

  <div class=" b1 " local-class=" a1 ">
    {{! Some content }}
  </div>

  <div class=" {{this.styles.a1}} ">
    {{! Some content }}
  </div>

  <div local-class=" {{this.someProperty}} ">
    {{! Some content }}
  </div>

  <div class=" {{if this.someCondition this.styles.a1}} ">
    {{! Some content }}
  </div>

  <div local-class=" {{if this.someCondition "a1"}} ">
    {{! Some content }}
  </div>
</div>