{
  "extends": "@shared-configs/typescript/ember",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "declarationDir": "declarations",
    "emitDeclarationOnly": true,
    "noEmit": false,
    "noEmitOnError": false,
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "unpublished-development-types/**/*"
  ],
  "glint": {
    "environment": [
      "ember-loose",
      "ember-template-imports"
    ]
  }
}
