<ContainerQuery
  @features={{hash
    square=(aspect-ratio max=1.25 min=0.8)
    tall=(aspect-ratio max=0.8)
    wide=(aspect-ratio min=1.25)
  }}
  @tagName="section"
  class={{this.styles.components-widgets-widget-1__container}}
>
  <header>
    <h2>Widget 1</h2>
  </header>

  <div class={{this.styles.components-widgets-widget-1__items}}>
    <div class={{this.styles.components-widgets-widget-1__item-1}}>
      <Widgets::Widget-1::Item @title="Item 1" />
    </div>

    <div class={{this.styles.components-widgets-widget-1__item-2}}>
      <Widgets::Widget-1::Item @title="Item 2" />
    </div>

    <div class={{this.styles.components-widgets-widget-1__item-3}}>
      <Widgets::Widget-1::Item @title="Item 3" />
    </div>
  </div>
</ContainerQuery>