<ContainerQuery
  @features={{hash wide=(width min=320)}}
  @tagName="article"
  class={{this.styles.components-products-product-card__container}}
  data-test-product-card
>
  <header class={{this.styles.components-products-product-card__header}}>
    <h2
      class={{this.styles.components-products-product-card__name}}
      data-test-field="Name"
    >
      {{@product.name}}
    </h2>
  </header>

  <div
    class={{this.styles.components-products-product-card__image-container}}
  >
    <Products::Product::Image @src={{@product.imageUrl}} />
  </div>

  <div class={{this.styles.components-products-product-card__body}}>
    <p
      class={{this.styles.components-products-product-card__description}}
      data-test-field="Short Description"
    >
      {{@product.shortDescription}}
    </p>

    <p
      class={{this.styles.components-products-product-card__price}}
      data-test-field="Price"
    >
      {{this.formatPrice @product.price}}
    </p>
  </div>

  <div class={{this.styles.components-products-product-card__actions}}>
    <LinkTo
      @model={{@product.id}}
      @route={{@redirectTo}}
      class={{this.styles.components-products-product-card__link}}
      data-test-link="Learn More"
    >
      Learn more
    </LinkTo>
  </div>
</ContainerQuery>