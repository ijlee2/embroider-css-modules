{{#if (or @title @instructions)}}
  <div class={{this.styles.components-ui-form-information__container}}>
    {{#if @title}}
      <div
        class={{this.styles.components-ui-form-information__title}}
        data-test-title
        id={{concat @formId "-title"}}
      >
        {{@title}}
      </div>
    {{/if}}

    {{#if @instructions}}
      <p
        class={{this.styles.components-ui-form-information__instructions}}
        data-test-instructions
        id={{concat @formId "-instructions"}}
      >
        {{@instructions}}
      </p>
    {{/if}}
  </div>
{{/if}}