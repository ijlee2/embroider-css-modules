{
  "name": "ember-codemod-remove-global-styles",
  "version": "0.6.2",
  "description": "Codemod to localize global styles",
  "keywords": [
    "codemod",
    "css-modules",
    "ember-codemod",
    "ember-css-modules",
    "emberjs",
    "embroider-css-modules"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ijlee2/embroider-css-modules.git",
    "directory": "packages/ember-codemod-remove-global-styles"
  },
  "license": "MIT",
  "author": "Isaac J. Lee",
  "type": "module",
  "main": "dist/src/index.js",
  "bin": "dist/bin/ember-codemod-remove-global-styles.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "sh build.sh --production",
    "format": "prettier . --cache --write",
    "lint": "concurrently \"pnpm:lint:*(!fix)\" --names \"lint:\"",
    "lint:fix": "concurrently \"pnpm:lint:*:fix\" --names \"fix:\" && pnpm format",
    "lint:format": "prettier . --cache --check",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "prepare": "pnpm build",
    "test": "sh build.sh --test && mt dist-for-testing --quiet"
  },
  "dependencies": {
    "@codemod-utils/ast-javascript": "^2.1.3",
    "@codemod-utils/ast-template": "^2.1.3",
    "@codemod-utils/ast-template-tag": "^1.2.1",
    "@codemod-utils/files": "^3.2.4",
    "postcss": "^8.5.6",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@codemod-utils/tests": "^2.2.3",
    "@shared-configs/eslint-config-node": "workspace:*",
    "@shared-configs/prettier": "workspace:*",
    "@shared-configs/typescript": "workspace:*",
    "@sondr3/minitest": "^0.1.2",
    "@types/node": "^20.19.30",
    "@types/yargs": "^17.0.35",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": "20.* || >= 22"
  }
}
