<div
  data-test-memo-actions
  local-class="actions {{if
    (or @cqFeatures.small @cqFeatures.short)
    'minimal-layout'
  }}"
>
  <button
    aria-label="Comment"
    class={{this.styles.button}}
    type="button"
  >
    {{svg-jar
      "message-processing-outline"
      aria-hidden="true"
      local-class="icon icon-comment"
    }}
  </button>

  <button
    aria-label="Repost"
    class={{this.styles.button}}
    type="button"
  >
    {{svg-jar
      "sync"
      aria-hidden="true"
      local-class="icon icon-repost"
    }}
  </button>

  <button aria-label="Like" class={{this.styles.button}} type="button">
    {{svg-jar
      "heart-outline"
      aria-hidden="true"
      local-class="icon"
    }}
  </button>

  <button aria-label="Share" class={{this.styles.button}} type="button">
    {{svg-jar
      "share-variant-outline"
      aria-hidden="true"
      local-class="icon"
    }}
  </button>
</div>