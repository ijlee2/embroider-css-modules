{{! Don't remove class and local class attributes that are not empty. }}
<div data-test-container>
  <div class=" b1 ">
    {{! Some content }}
  </div>

  <div class={{this.styles.a1}}>
    {{! Some content }}
  </div>

  <div class={{concat this.styles.a1 " b1"}}>
    {{! Some content }}
  </div>

  <div class=" {{this.styles.a1}} ">
    {{! Some content }}
  </div>

  <div class=" {{get this.styles this.someProperty}} ">
    {{! Some content }}
  </div>

  <div class=" {{if this.someCondition this.styles.a1}} ">
    {{! Some content }}
  </div>

  <div class=" {{local-class this.styles (if this.someCondition "a1")}} ">
    {{! Some content }}
  </div>
</div>