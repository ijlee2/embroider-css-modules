{{page-title "Products"}}

<Ui::Page @title="Products">
  <div
    class={{local-class
      (concat
        (if
          this.isPartOfNestProductDetailsExperiment
          "shared-layout products-with-details"
          "shared-layout products"
        )
        " "
        "sticky-container"
      )
    }}
  >
    <div local-class="filters">
      <div local-class="filter">
        <Ui::Form::Input
          @changeset={{hash name=this.name}}
          @key="name"
          @label="Filter by"
          @onUpdate={{this.noOp}}
          @placeholder="Cake, pasta, etc."
        />
      </div>
    </div>

    <div local-class="list">
      {{#each this.filteredProducts as |product|}}
        <Products::Product::Card @product={{product}} />
      {{else}}
        <p>
          No products found.
        </p>
      {{/each}}
    </div>

    <div local-class="product-details">
      {{outlet}}
    </div>
  </div>
</Ui::Page>